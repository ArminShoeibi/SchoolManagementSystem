<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/bootstrap-5.0.0-beta1-dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap-5.0.0-beta1-dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>

        let settings = { validClass: "is-valid", errorClass: "is-invalid" };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
</body>
</html>
